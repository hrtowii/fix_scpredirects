{
    "manifest_version": 2,
    "name": "Fix Redirector",
    "version": "1.0",
    "description": "Automatically redirects broken links from avn.sh to their intended target URLs.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://redirect.crom.avn.sh/*"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "applications": {
      "gecko": {
        "id": "fix-redirector@example.com"
      }
    }
  }
  